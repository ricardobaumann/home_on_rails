<p id="notice"><%= notice %></p>

<h1>Listing Stocks</h1>

<div align="center">
  <%= link_to 'New Stock', new_stock_path %>
</div>
<br>

<table>
  <thead>
    <tr>
      <th>Entry date</th>
      <th>Stock operation</th>
      <th>Total price</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.entry_date %></td>
        <td><%= stock.stock_operation %></td>
        <td><%= stock.total_price %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Items', stock_stock_items_path(stock) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


