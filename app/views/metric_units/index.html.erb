<p id="notice"><%= notice %></p>

<h1>Listing Metric Units</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @metric_units.each do |metric_unit| %>
      <tr>
        <td><%= metric_unit.name %></td>
        <td><%= link_to 'Show', metric_unit %></td>
        <td><%= link_to 'Edit', edit_metric_unit_path(metric_unit) %></td>
        <td><%= link_to 'Destroy', metric_unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

