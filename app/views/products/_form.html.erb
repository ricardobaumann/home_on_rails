<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :product_group %><br />
    <%= f.select :product_group_id, options_for_select(ProductGroup.all.map{|s|[s.name, s.id]},@product.product_group_id) %>
  </div>

  <div class="field">
    <%= f.label :metric_unit %><br />
    <%= f.select :metric_unit_id, options_for_select(MetricUnit.all.map{|s|[s.name, s.id]}, @product.metric_unit_id) %>
  </div>

  <div class="field">
    <%= f.label :unit_prize %><br>
    <%= f.text_field :unit_prize %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
